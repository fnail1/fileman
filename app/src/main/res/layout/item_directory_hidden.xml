<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@drawable/bg_ripple_primary"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_folder"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/action"
        android:lines="1"
        android:padding="4dp"
        android:singleLine="true"
        android:textAppearance="@style/HiddenDirectoryNameTextAppearance"
        tools:text="ask;jdfhaksjd"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/action"
        android:padding="4dp"
        android:textAppearance="@style/FileInfoTextAppearance"
        tools:text="size: 32 Gb"
        />

    <FrameLayout
        android:id="@+id/action"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:foreground="@drawable/bg_ripple_primary"
        >

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_expand_more"/>
    </FrameLayout>
</RelativeLayout>